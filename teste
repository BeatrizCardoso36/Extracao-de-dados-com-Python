import PySimpleGUI as PG

layout = [
    [PG.Text('Ol√°,seja bem-vindo')],
    [PG.Text('digite seu nome: ', Key='teste')],
    [PG.Input(Key='nome'), PG.Button('Testar')],
]

window = PG.Window('primeira interface', layout)

while True:
    evento, valor = window.read()

    if evento =='Testar':
        window['print_nome'].update(valor['nome'])
        window['teste'].update('Parabens')


    if evento == PG.WIN_CLOSED:
        break
